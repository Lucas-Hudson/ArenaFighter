%h1
  New Fighter

%p
  = form_for(@fighter) do |f|
    = f.label 'Avatar'
    = f.file_field 'avatar'

    = f.label 'Name'
    = f.text_field 'name', autofocus: true

    = f.label 'Lifepoints'
    = f.text_field 'lifepoints'

    = f.label 'Hitpoints'
    = f.text_field 'hitpoints'

    = submit_tag "Create Fighter"
